{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"]
    }
  },
  "rootDir": ".",
  "include": ["src/**/*.ts", "config/**/*.ts", "server.ts"],
  "exclude": ["node_modules", "dist"]
}
